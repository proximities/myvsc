{
    "name": "helloworld-minimal-sample",
    "description": "Minimal HelloWorld example for VS Code",
    "version": "0.0.1",
    "publisher": "vscode-samples",
    "repository": "https://github.com/Microsoft/vscode-extension-samples/helloworld-minimal-sample",
    "engines": {
        "vscode": "^1.74.0"
    },
    "activationEvents": [],
    "main": "./extension.js",
    "contributes": {
        "commands": [
            {
                "command": "extension.addDefineStatement",
                "title": "add define statement"
            },
            {
                "command": "extension.removeBuildFolder",
                "title": "remove build folder"
            },
            {
                "command": "extension.makeGameCodeReadable",
                "title": "make game code readable"
            }
        ],
        "grammars": [
            {
                "path": "hlsl-injection.json",
                "scopeName": "hlsl.injection",
                "injectTo": [
                    "source.hlsl"
                ]
            },
            {
                "path": "cpp-injection.json",
                "scopeName": "cpp.injection",
                "injectTo": [
                    "source.cpp"
                ]
            }
        ]
    },
    "scripts": {},
    "devDependencies": {
        "@types/vscode": "^1.73.0"
    },
    "dependencies": {
        "vscode-ext-selection": "^1.0.1"
    }
}
